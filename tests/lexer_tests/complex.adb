--  Одномерные массивы: примеры, инициализация, доступ к элементам
--  Содержание:
--    1. Целочисленный массив (полная и частичная инициализация)
--    2. Массив с символьными индексами
--    3. Строка как частный случай массива символов
--    4. Доступ к границам массива (First, Last, Length)
--    5. Особые случаи с диапазонами

with Ada.Text_IO; use Ada.Text_IO;

procedure Arr is 

   --------------------------------------------------------------------
   -- 1. ЦЕЛОЧИСЛЕННЫЕ МАССИВЫ
   --------------------------------------------------------------------
   -- Полная инициализация
   Int_Array1 : array(1 .. 5) of Integer := (1, 2, 3, 4, 5);

   -- Частичная инициализация:
   -- первые два заданы явно, остальные будут нулями
   Int_Array2 : array(1 .. 5) of Integer := (1 => 10, 2=> 20, others => 0);

   --------------------------------------------------------------------
   -- 2. МАССИВ СИМВОЛОВ
   --------------------------------------------------------------------
   Char_Array : array (1 .. 4) of Character := ('A','B','C','D');

   --------------------------------------------------------------------
   -- 3. СТРОКА (как массив символов)
   --------------------------------------------------------------------
   Str : String(1 .. 6) := "ABCDEF";

   I : Integer;
   Ch : Character;

begin 
   Put_Line("=== НАЧАЛО ПРОГРАММЫ ===");
   New_Line;

   --------------------------------------------------------------------
   -- 1. ЦЕЛОЧИСЛЕННЫЕ МАССИВЫ
   --------------------------------------------------------------------
   Put_Line("Int_Array1 (полная инициализация):");
   for I in Int_Array1'Range loop
      Put_Line("Int_Array1(" & Integer'Image(I) & ") = " & Integer'Image(Int_Array1(I)));
   end loop;
   New_Line;

   Put_Line("Int_Array2 (частичная инициализация):");
   for I in Int_Array2'Range loop
      Put_Line("Int_Array2(" & Integer'Image(I) & ") = " & Integer'Image(Int_Array2(I)));
   end loop;
   New_Line;

   -- Изменение значения
   Int_Array2(3) := 99;
   Put_Line("После изменения Int_Array2(3): " & Integer'Image(Int_Array2(3)));
   New_Line;

   --------------------------------------------------------------------
   -- 2. МАССИВ СИМВОЛОВ
   --------------------------------------------------------------------
   Put_Line ("Char_Array:");
   for I in Char_Array'Range loop
      Put_Line ("Char_Array(" & Integer'Image (I) & ") = '" & Char_Array (I) & "'");
   end loop;
   New_Line;


   --------------------------------------------------------------------
   -- 3. СТРОКА
   --------------------------------------------------------------------
   Put_Line("String (Str): " & Str);
   Put_Line("Str(1) = " & Str(1));
   Put_Line("Str(6) = " & Str(6));

   -- Замена символа
   Str(6) := 'Z';
   Put_Line("После замены последнего символа: " & Str);
   New_Line;

   --------------------------------------------------------------------
   -- 4. ДОСТУП К ГРАНИЦАМ МАССИВА
   --------------------------------------------------------------------
   Put_Line("=== ГРАНИЦЫ МАССИВОВ ===");

   Put_Line("Int_Array1'First = " & Integer'Image(Int_Array1'First));
   Put_Line("Int_Array1'Last  = " & Integer'Image(Int_Array1'Last));
   Put_Line("Int_Array1'Length = " & Integer'Image(Int_Array1'Length));

   Put_Line("Char_Array'First = " & Integer'Image(Char_Array'First));
   Put_Line("Char_Array'Last  = " & Integer'Image(Char_Array'Last));
   Put_Line("Char_Array'Length = " & Integer'Image(Char_Array'Length));
   New_Line;

   --------------------------------------------------------------------
   -- 5. ОСОБЫЕ СЛУЧАИ
   --------------------------------------------------------------------
   Put_Line("=== ОСОБЫЕ СЛУЧАИ ===");
   Put_Line("Диапазон (15 .. 10) для массива недопустим -> ошибка компиляции.");
   Put_Line("Но в цикле 'for I in 15 .. 10' это допустимо: тело цикла просто не выполняется.");

   New_Line;
   Put_Line("=== КОНЕЦ ПРОГРАММЫ ===");

end Arr;